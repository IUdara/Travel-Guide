<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >

    <ImageView
        android:id="@+id/place_iv"
        android:layout_gravity="center"
        android:layout_width="@dimen/grid_cell_side"
        android:layout_height="@dimen/grid_cell_side"
        android:src="@drawable/placeholder_large"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/place_tv"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/grid_cell_font_size"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="TextView" />

</LinearLayout>