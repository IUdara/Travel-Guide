<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travelsoft.lanka.travel_guide.fragments.PlacesHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <GridView
            android:id="@+id/image_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="@dimen/grid_clm_width"
            android:numColumns="1"
            android:verticalSpacing="@dimen/grid_item_space"
            android:horizontalSpacing="@dimen/grid_item_space"
            android:stretchMode="columnWidth"
            android:gravity="center"/>

    </LinearLayout>

</FrameLayout>
